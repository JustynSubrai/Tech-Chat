<main class="container">
  <div class="row d-flex justify-content-around">
    <div class="bg-info col-5 shadow p-3  bg-dark rounded">
      <h2 class="mb-5 font-weight-light text-info">Log In</h2>
      <form class="login-form">
        <div class="form-group ">
          <input type="email" class="form-control btn-outline-info my-2 my-sm-0 bg-dark" id="email-login"
            placeholder="Email or Username">
        </div>
        <div class="form-group">
          <input type="password" class="form-control btn-outline-info my-2 my-sm-0 bg-dark" id="password-login"
            placeholder="Password">
        </div>
        <div class="form-group form-check mb-5">
          <input type="checkbox" class="form-check-input " id="rememberMe">
          <label class="form-check-label text-info" for="rememberMe">Remember Me</label>
        </div>
        <button type="submit" class="btn btn-outline-info my-2 my-sm-0 mr-5">Log In</button>
      </form>
    </div>
    <div class="bg-danger col-5 shadow p-3 mb-5 bg-dark rounded">
      <h2 class="mb-5 font-weight-light text-info">Sign Up</h2>
      <form class="signup-form">
        <div class="form-group ">
          <input type="email" class="form-control btn-outline-info my-2 my-sm-0 bg-dark" id="email-signup"
            placeholder="Enter Email">
        </div>
        <div class="form-group">
          <input type="username" class="form-control btn-outline-info my-2 my-sm-0 bg-dark" id="username-signup"
            placeholder="Enter Username">
        </div>
        <div class="form-group mb-5">
          <input type="password" class="form-control btn-outline-info my-2 my-sm-0 bg-dark" id="password-signup"
            placeholder="Password">
        </div>
        <button type="submit" class="btn btn-outline-info my-2 my-sm-0 mr-5">Sign Up</button>
      </form>
    </div>
  </div>
</main>

<script src="/javascript/login.js"></script>